<%- include('../partials/header.ejs') %>

<div class="container">
	<div class="row justify-content-center">
		<div class="col-6">
			<div class="container text-center">
				<h3 class="mb-4">Create a new Campground</h3>
				<div class="col-8 m-auto">
					<form action="/campgrounds" method="POST">
						<div class="form-group">
							<input class="form-control" type="text" placeholder="Name" name="name">
						</div>
						<div class="form-group">
							<input class="form-control" type="number" placeholder="Price" name="price" min="0.01"
								step="0.01">
						</div>
						<div class="form-group">
							<input class="form-control" type="text" placeholder="Image url" name="image">
						</div>
						<div class="form-group">
							<input class="form-control" type="text" placeholder="Enter a description"
								name="description">
						</div>
						<div class="form-group">
							<button class="btn btn-lg btn-primary btn-block">Submit</button>
						</div>
					</form>
					<a class="float-left" href="/campgrounds">Go back</a>
				</div>
			</div>
		</div>
	</div>
</div>



